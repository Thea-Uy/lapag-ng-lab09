#include <stdio.h>

// 1
int incr(int x) {
    return x + 1;
}

// 2
int prod_of_squares(int a1, int b1) {
    int a2 = a1*a1;
    int b2 = b1*b1;

    return a2 * b2;
}

// 3
int get_sign1(int a) {
    if (a > 0) {
        return '+';
    } else if (a < 0) {
        return '-';
    } else {
        return '\0';
    }
}

// 4
int get_sign2(int a) {
    return a > 0 ? '+' 
        : a < 0 ? '-'
        : '\0';
}

// 5
int sum_1_to_n(int n) {
    int ret = 0;

    for (int x = 1; x <= n; x++) {
        ret += x;
    }

    return ret;
}

// 6
int sum1(int *arr, int a) {
    int ret = 0;

    for (int x = 0; x < a; x++) {
        ret += arr[x];
    }

    return ret;
}

// 7
int sum2(int *arr, int a) {
    int ret = 0;

    for (int x = 0; x < a; x++) {
        ret += *(arr + x);
    }

    return ret;
}

// 8
void sum3(int *arr, int a, int *out) {
    *out = 0;

    for (int x = 0; x < a; x++) {
        *out += *(arr + x);
    }
}

// 9
void square_all_inplace(int *arr, int n) {
    for (int x = 0; x < n; x++) {
        arr[x] = arr[x]*arr[x];
    }
}

// 10 
void square_all_out_1(int *arr, int *out, int n) {
    for (int x = 0; x < n; x++) {
        out[x] = arr[x]*arr[x];
    }
}

// main
int main() {
    int one = incr(1);
    int two = prod_of_squares(2, 3);
    char three1 = get_sign1(1);
    char three2 = get_sign1(0);
    char three3 = get_sign1(-1);
    char four1 = get_sign2(1);
    char four2 = get_sign2(0);
    char four3 = get_sign2(-1);
    int five = sum_1_to_n(5);
    int arr[3] = {1, 2, 3};
    int six = sum1(arr, 3);
    int seven = sum2(arr, 3);
    int eight;
    sum3(arr, 3, &eight);
    square_all_inplace(arr, 3);


    printf("1) %d\n", one);
    printf("2) %d\n", two);
    printf("3) %c, %c, %c\n", three1, three2, three3);
    printf("4) %c, %c, %c\n", four1, four2, four3);
    printf("5) %d\n", five);
    printf("6) %d\n", six);
    printf("7) %d\n", seven);
    printf("8) %d\n", eight);
    printf("9) %d, %d, %d\n", arr[0], arr[1], arr[2]);

    return 0;
}
